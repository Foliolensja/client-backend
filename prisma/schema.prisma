// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String

  email String
  hash  String

  dob        DateTime @db.Date
  riskRating Int
  netWorth   Float
  salary     Float


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  portfolio Portfolio

  @@unique([email])
  @@map("users")
}

type Portfolio {
  indices   UserIndex[]
  updatedAt DateTime
}

type UserIndex {
  ticker String
  weight Decimal
}

type Index {
  ticker       String
  name         String
  volume       String
  c_price      String
  price_change String
  change       String
}

model TradingDay {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  date         String
  advancing    Index[]
  declining    Index[]
  trading_firm Index[]

  @@unique([date])
  @@map("activities")
}

type DailyIndices {
  date           String
  points         String
  change         String
  change_percent String
  volume         String
}

type Markets {
  main          DailyIndices
  junior        DailyIndices
  combined      DailyIndices
  us            DailyIndices
  financial     DailyIndices
  manufacturing DailyIndices
}

model IndexChange {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  date       String
  index_info Markets

  @@unique([date])
  @@map("indices")
}
